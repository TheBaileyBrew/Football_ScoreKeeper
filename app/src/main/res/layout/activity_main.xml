<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/football_field"
    android:orientation="vertical"
    tools:context="com.thebaileybrew.scorekeeper.football.footballscorekeeper.MainActivity">

    <!--TEAM ONE AND TWO SPINNERS ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/teamOne_spinner"
            android:layout_margin="@dimen/small_med_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Spinner
            android:id="@+id/teamTwo_spinner"
            android:layout_margin="@dimen/small_med_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>

    <!--TEAM LOGOS AND SCORE ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/team_one_spinner_team_logo"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="70dp"
            />
        <TextView
            android:id="@+id/team_one_score"
            android:gravity="center"
            android:layout_margin="@dimen/small_padding"
            android:paddingRight="@dimen/med_medium_padding"
            android:paddingLeft="@dimen/med_medium_padding"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:textSize="@dimen/large_font"
            android:text="0"
            />
        <ImageView
            android:id="@+id/team_two_spinner_team_logo"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="70dp"
            />
        <TextView
            android:id="@+id/team_two_score"
            android:gravity="center"
            android:layout_margin="@dimen/small_padding"
            android:paddingRight="@dimen/med_medium_padding"
            android:paddingLeft="@dimen/med_medium_padding"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:textSize="@dimen/large_font"
            android:text="0"
            />
    </LinearLayout>

    <!--TEAM ONE AND TWO YARDAGE HEADER LINES ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_passing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/pass"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_recieving"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/rec"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_rushing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/rush"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_passing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/pass"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_recieving"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/rec"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_rushing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:textSize="@dimen/small_med_font"
            android:text="@string/rush"
            />
    </LinearLayout>

    <!--TEAM ONE AND TWO YARDAGE TOTALS ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_pass_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_rec_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_one_rush_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_pass_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_rec_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/team_two_rush_score"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/small_med_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_med_font"
            android:text="0"
            />
    </LinearLayout>

    <!--TEAM ONE AND TWO OFFENSE / DEFENSE SLIDERS ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <!--TEAM ONE AND TWO SCORING BUTTONS ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/team_one_toggle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/small_med_padding"
            android:layout_height="match_parent"
            android:background="@drawable/toggle_switch"
            android:textOn=""
            android:textOff=""
            />
        <!--TEAM ONE BUTTONS ** VERTICAL-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                        <Button
                android:id="@+id/team_one_off_td"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="TOUCHDOWN"
                android:onClick="touchdownClickTeamOne"/>
            <Button
                android:id="@+id/team_one_off_extra"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="EXTRA POINT"
                android:onClick="extraPointClickTeamOne"/>
            <Button
                android:id="@+id/team_one_off_plustwo"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="TWO POINT CONVERSION"
                android:onClick="conversionClickTeamOne"/>
            <Button
                android:id="@+id/team_one_off_fg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="FIELDGOAL"
                android:onClick="fieldgoalClickTeamOne"/>

        </LinearLayout>
        <ToggleButton
            android:id="@+id/team_two_toggle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/small_med_padding"
            android:layout_height="match_parent"
            android:background="@drawable/toggle_switch"
            android:checked="true"
            android:textOn=""
            android:textOff=""
            />
        <!--TEAM TWO BUTTONS ** VERTICAL-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/team_two_off_td"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="TOUCHDOWN"
                android:onClick="touchdownClickTeamTwo"/>
            <Button
                android:id="@+id/team_two_off_extra"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="EXTRA POINT"
                android:onClick="extraPointClickTeamTwo"/>
            <Button
                android:id="@+id/team_two_off_plustwo"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="TWO POINT CONVERSION"
                android:onClick="conversionClickTeamTwo"/>
            <Button
                android:id="@+id/team_two_off_fg"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:textSize="@dimen/small_med_font"
                android:text="SAFETY"
                android:onClick="fieldgoalClickTeamTwo"/>
        </LinearLayout>
    </LinearLayout>

    <!--YARDAGE ADDITIONS FOR PASSING ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pass_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/small_med_font"
            android:layout_weight="1"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_one_qb_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamOneMinus"/>
        <Button
            android:id="@+id/team_one_qb_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamOnePlus"/>
        <Button
            android:id="@+id/team_one_qb_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamOneTenPlus"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pass_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/small_med_font"
            android:layout_weight="1"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_two_qb_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamTwoMinus"/>
        <Button
            android:id="@+id/team_two_qb_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamTwoPlus"/>
        <Button
            android:id="@+id/team_two_qb_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="passingYardsTeamTwoTenPlus"/>

    </LinearLayout>

    <!--YARDAGE ADDITIONS FOR RUSHING ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rush_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/small_med_font"
            android:layout_weight="1"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_one_rb_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamOneMinus"/>
        <Button
            android:id="@+id/team_one_rb_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamOnePlus"/>
        <Button
            android:id="@+id/team_one_rb_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamOneTenPlus"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rush_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/small_med_font"
            android:layout_weight="1"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_two_rb_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamTwoMinus"/>
        <Button
            android:id="@+id/team_two_rb_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamTwoPlus"/>
        <Button
            android:id="@+id/team_two_rb_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="rushingYardsTeamTwoTenPlus"/>
    </LinearLayout>

    <!--YARDAGE ADDITIONS FOR RECEIVING ** HORIZONTAL-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rec_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:textSize="@dimen/small_med_font"
            android:layout_weight="1"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_one_wr_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamOneMinus"/>
        <Button
            android:id="@+id/team_one_wr_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamOnePlus"/>
        <Button
            android:id="@+id/team_one_wr_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamOneTenPlus"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rec_short"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:textSize="@dimen/small_med_font"
            android:background="#22999999"
            android:gravity="center"/>
        <Button
            android:id="@+id/team_two_wr_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamTwoMinus"/>
        <Button
            android:id="@+id/team_two_wr_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamTwoPlus"/>
        <Button
            android:id="@+id/team_two_wr_plus_ten"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+10"
            android:textSize="@dimen/small_font"
            android:layout_weight="1"
            android:onClick="recievingYardsTeamTwoTenPlus"/>

    </LinearLayout>


</LinearLayout>
